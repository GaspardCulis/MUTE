---
import RadioButton from "../components/editor/RadioButton.astro";
import TextInput from "../components/editor/TextInput.astro";
import TitleView from "../components/TitleView.astro";
import EditorPanel from "../layouts/EditorPanel.astro";
import Layout from "../layouts/Layout.astro";

import Fonts from "../../public/title-fonts/fonts.json";
---

<Layout title="Welcome to Astro.">
	<main>
		<TitleView />
		<section id="editor">
			<EditorPanel width={3} height={2}>
				<h1>Top</h1>
				<TextInput placeholder="Top title text" variableid="title.top" />

				<h1>Middle</h1>
				<TextInput placeholder="Middle title text" variableid="title.middle" />

				<h1>Bottom</h1>
				<TextInput placeholder="Bottom title text" variableid="title.bottom" />
			</EditorPanel>
			<EditorPanel width={2} height={2}>
				<h1>Save</h1>
			</EditorPanel>
			<EditorPanel width={4} height={4}>
				<h1>Fonts</h1>
				<div id="fonts-list">
					{
						Fonts.map((font) => (
							<RadioButton id={font.id} group="fonts">
								<img
									height="40px"
									style="padding-block: 8px; pointer-events: none;"
									src={`/title-fonts/fonts/${font.id}/thumbnails/flat.png`}
								/>
							</RadioButton>
						))
					}
				</div>
			</EditorPanel>
			<EditorPanel width={1} height={4}>
				<h1>Textures</h1>
				<div id="textures-list-container">
					<div id="textures-list"></div>
				</div>
			</EditorPanel>
			<EditorPanel width={5}>jaaj5</EditorPanel>
		</section>
	</main>
</Layout>
<script>
	import Editor from "../lib/Editor";
	import Font from "../lib/Font";

	const textures_list = document.querySelector(
		"#textures-list",
	) as HTMLDivElement;
	const radio_buttons = document.querySelectorAll(
		"input[type=radio][name=fonts]",
	) as NodeListOf<HTMLInputElement>;
	radio_buttons.forEach((radio) => {
		radio.addEventListener("input", () => {
			updateTexturesList(radio.id);
		});
	});

	async function updateTexturesList(font_id: string) {
		textures_list.innerHTML = "";

		let checked = "checked";
		const font = await Font.load(font_id);

		for (let [texture_id, _texture] of Object.entries(font.textures)) {
			textures_list.innerHTML += `
				<div>
					<input type="radio" id="${texture_id}" name="textures" ${checked} />
					<label for="${texture_id}">
						<img 
							height="44px"
							src="/title-fonts/fonts/${font_id}/thumbnails/${texture_id}.png"
						/>
					</label>
				</div>
			`;
			checked = "";
		}
	}

	const editor = Editor.get();
</script>
<style>
	main {
		margin: auto;
		padding-block: 3rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	#editor {
		display: grid;
		gap: 2rem;

		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));

		margin-top: 6rem;
	}

	#fonts-list {
		display: grid;

		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	}

	#textures-list-container {
		position: relative;
		width: 100%;
		height: 100%;
		overflow-y: auto;
	}

	#textures-list-container::-webkit-scrollbar {
		width: 12px;
	}

	#textures-list-container::-webkit-scrollbar-track {
		background: transparent;
	}

	#textures-list-container::-webkit-scrollbar-thumb {
		background-color: #ced2d6;
		border-block: 2px solid #e6e3e6;
		outline: 2px solid #211c21;
	}

	#textures-list {
		position: absolute;
		top: 4px;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: column;
		align-items: center;

		width: 100%;

		overflow-y: hidden;
	}
</style>
<style is:inline>
	input[type="radio"][name="textures"] {
		display: none;
	}

	input[type="radio"][name="textures"] + label {
		opacity: 0.5;
		transition: opacity 100ms ease-in-out;
	}

	input[type="radio"][name="textures"]:checked + label {
		opacity: 1;
	}
	input[type="radio"][name="textures"]:checked + label > img {
		filter: drop-shadow(12px 12px 7px rgba(0, 0, 0, 0.5));
	}
</style>
